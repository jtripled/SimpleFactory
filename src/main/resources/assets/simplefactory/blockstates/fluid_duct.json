{
    "multipart": [
        {
            "when": { "facing": "north" },
            "apply": { "model": "simplefactory:fluid_duct" }
        },
        {
            "when": { "facing": "east" },
            "apply": { "model": "simplefactory:fluid_duct", "y": 90 }
        },
        {
            "when": { "facing": "south" },
            "apply": { "model": "simplefactory:fluid_duct", "y": 180 }
        },
        {
            "when": { "facing": "west" },
            "apply": { "model": "simplefactory:fluid_duct", "y": 270 }
        },
        {
            "when": { "facing": "up" },
            "apply": { "model": "simplefactory:fluid_duct", "x": 270, "y": 270 }
        },
        {
            "when": { "facing": "down" },
            "apply": { "model": "simplefactory:fluid_duct", "x": 90, "y": 270 }
        },
        {
            "when": { "north": "true" },
            "apply": { "model": "simplefactory:fluid_duct_side", "uvlock": true }
        },
        {
            "when": { "east": "true" },
            "apply": { "model": "simplefactory:fluid_duct_side", "y": 90, "uvlock": true }
        },
        {
            "when": { "south": "true" },
            "apply": { "model": "simplefactory:fluid_duct_side", "y": 180, "uvlock": true }
        },
        {
            "when": { "west": "true" },
            "apply": { "model": "simplefactory:fluid_duct_side", "y": 270, "uvlock": true }
        },
        {
            "when": { "up": "true" },
            "apply": { "model": "simplefactory:fluid_duct_side", "x": 270, "uvlock": true }
        },
        {
            "when": { "down": "true" },
            "apply": { "model": "simplefactory:fluid_duct_side", "x": 90, "uvlock": true }
        }
    ]
}
